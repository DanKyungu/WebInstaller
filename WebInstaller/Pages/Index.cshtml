@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <form class="login100-form validate-form p-l-55 p-r-55 p-t-178" method="post">

                <span class="login100-form-title">
                    Web Installer
                </span>

                <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter Database Name">
                    <input asp-for="@Model.DatabaseInformation.ServerName" class="input100" type="text" name="databaseName" placeholder="Database Name">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter Server Name">
                    <input asp-for="DatabaseInformation.ServerName" class="input100" type="text" name="ServerName" placeholder="Server Name">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter Server Port">
                    <input asp-for="DatabaseInformation.ServerPort" class="input100" type="text" name="ServerPort" placeholder="Server Name">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter Server Username">
                    <input asp-for="DatabaseInformation.ServerUserName" class="input100" type="text" name="ServerUsername" placeholder="Server UserName">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Please enter password">
                    <input asp-for="DatabaseInformation.ServerPassword" class="input100" type="password" name="ServerPassword" placeholder="Server Password">
                    <span class="focus-input100"></span>
                </div>

                <div class="text-right p-t-13 p-b-23">
                    <span class="txt1">
                        Forgot
                    </span>

                    <a href="#" class="txt2">
                        Username / Password?
                    </a>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Generate Database
                    </button>
                </div>

                <div class="flex-col-c p-t-170 p-b-40">
                    <span class="txt1 p-b-9">
                        Don’t have an account?
                    </span>

                    <a href="#" class="txt3">
                        Sign up now
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
